{
  "name": "windows-background-changer",
  "version": "1.0.0",
  "description": "A node library to change Windows wallpaper using a native C# executable.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build:ts": "tsup src/index.ts --format cjs,esm --dts --clean --external koffi",
    "build": "npm run build:ts",
    "test": "ts-node tests/test.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "windows",
    "wallpaper",
    "background",
    "changer",
    "native"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^25.2.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "koffi": "^2.15.1",
    "ref-napi": "^3.0.3"
  }
}
