{
  "name": "@nghiavuive/windows-background-changer",
  "version": "1.0.0",
  "description": "A node library to change Windows wallpaper using Windows native APIs.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --external koffi",
    "test": "ts-node tests/test.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "windows",
    "wallpaper",
    "background",
    "changer",
    "native"
  ],
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "koffi": "^2.15.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^5.9.3"
  }
}
